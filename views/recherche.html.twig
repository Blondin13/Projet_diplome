{% extends "./index.html.twig" %}
{% block header %}
    <nav class="navbar navbar-expand-lg navbar-dark bg-success">
        <div class="container">
            <a class="nav-logo navbar-brand" href="#">
                <img src="/assets/img/logo2.png" alt="logo.eco" width="60" height="60" />
            </a>
            <button
                class="navbar-toggler"
                type="button"
                data-bs-toggle="collapse"
                data-bs-target="#navbarSupportedContent"
                aria-controls="navbarSupportedContent"
                aria-expanded="false"
                aria-label="Toggle navigation"
            >
                <span class="navbar-toggler-icon"></span>
            </button>
            <div class="div-navbar collapse navbar-collapse" id="navbarSupportedContent">
                <ul class="text-end navbar-nav me-auto mb-2 mb-lg-0">
                    <li class="nav-item">
                        <a class="nav-link" href="/accueil">Accueil</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" href="/entreprises/{{user.id}}">Entreprises</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link active" href="/recherche/{{user.id}}">Recherche</a>
                    </li>
                    <li class="nav-item">
                        <a class="li-contact-user nav-link" href="/contactad/{{user.id}}">Contact</a>
                    </li>
                </ul>
                <ul class="nav navbar-nav navbar-right text-end">
                  <li><a class="btn-connexion" href="/monprofil/{{user.id}}"><span class="bi bi-person-fill"></span> Mon profil</a></li>
                </ul>
            </div>
        </div>
    </nav>
{% endblock %}

{% block main %}

<main class="main-recherche container">
        <h3><strong>Cochez votre catégorie</strong></h3>
		<article class="article-btn-radio">
		    <form class="form-btn-radio">
                <div>
                  <input type="radio" id="radio-besoins" name="choix" value="besoins">
                  <label for="besoins">Besoins</label>
                </div>
                
                <div>
                  <input type="radio" id="radio-productions" name="choix" value="productions">
                  <label for="productions">Productions</label>
                </div>
                
                <div>
                  <input type="radio" id="radio-dechets" name="choix" value="dechets">
                  <label for="dechets">Déchets</label>
                </div>
                
                 <div>
                  <input type="radio" id="radio-tous" name="choix" value="tous">
                  <label for="tous">Tous</label>
                </div>
            </form>
        </article>
        
        <form class="form-bar-search">
            <div>
                <label for="uname"> Entrez votre mot clé : </label>
                <input type="text" id="uname" name="name">
            </div>
            <div>
                <button class="btn-search">Search</button>
            </div>
        </form>
        <img class="img-bg-search" src="/assets/img/logo2.png">

</main>
{% endblock %}


{% block footer %}
{% endblock %}
